{
  "metadata": {
    "spec-version": "1.5"
  },
  "display-name": "BigQuery Execute",
  "configuration-groups": [
    {
      "label": "Basic",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Project ID",
          "name": "project",
          "widget-attributes": {
            "default": "auto-detect"
          }
        },
        {
          "widget-type": "textarea",
          "label": "SQL",
          "name": "sql",
          "widget-attributes": {
            "placeholder": "SELECT * from [dataset].[table]"
          }
        }
      ]
    },
    {
      "label": "Advanced",
      "properties": [
        {
          "name": "dialect",
          "label": "Dialect",
          "widget-type": "radio-group",
          "widget-attributes": {
            "layout": "inline",
            "default": "standard",
            "options": [
              {
                "id": "legacy",
                "label": "Legacy"
              },
              {
                "id": "standard",
                "label": "Standard"
              }
            ]
          }
        },
        {
          "name": "mode",
          "label": "Mode",
          "widget-type": "radio-group",
          "widget-attributes": {
            "layout": "inline",
            "default": "batch",
            "options": [
              {
                "id": "batch",
                "label": "Batch"
              },
              {
                "id": "interactive",
                "label": "Interactive"
              }
            ]
          }
        },
        {
          "widget-type": "textbox",
          "label": "Dataset Name",
          "name": "dataset",
          "widget-attributes": {
            "placeholder": "Name of dataset to store the results."
          }
        },
        {
          "widget-type": "textbox",
          "label": "Table Name",
          "name": "table",
          "widget-attributes": {
            "placeholder": "Name of table to store the results."
          }
        },
        {
          "name": "useCache",
          "label": "Use Cache",
          "widget-type": "toggle",
          "widget-attributes": {
            "default": "false",
            "on": {
              "value": "true",
              "label": "True"
            },
            "off": {
              "value": "false",
              "label": "False"
            }
          }
        },
        {
          "widget-type": "textbox",
          "label": "Job Location",
          "name": "location",
          "widget-attributes": {
            "placeholder": "Location of the job.",
            "default": "US"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Encryption Key Name",
          "name": "cmekKey",
          "widget-attributes": {
            "placeholder": "projects/<gcp-project-id>/locations/<key-location>/keyRings/<key-ring-name>/cryptoKeys/<key-name>"
          }
        },
        {
          "name": "rowAsArguments",
          "label": "Row As Arguments",
          "widget-type": "toggle",
          "widget-attributes": {
            "default": "false",
            "on": {
              "value": "true",
              "label": "True"
            },
            "off": {
              "value": "false",
              "label": "False"
            }
          }
        }
      ]
    },
    {
      "label": "Credentials",
      "properties": [
        {
          "name": "serviceAccountType",
          "label": "Service Account Type",
          "widget-type": "radio-group",
          "widget-attributes": {
            "layout": "inline",
            "default": "filePath",
            "options": [
              {
                "id": "filePath",
                "label": "File Path"
              },
              {
                "id": "JSON",
                "label": "JSON"
              }
            ]
          }
        },
        {
          "widget-type": "textbox",
          "label": "Service Account File Path",
          "name": "serviceFilePath",
          "widget-attributes": {
            "default": "auto-detect"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Service Account JSON",
          "name": "serviceAccountJSON"
        }
      ]
    }
  ],
  "filters": [
    {
      "name": "ServiceAuthenticationTypeFilePath",
      "condition": {
        "expression": "serviceAccountType == 'filePath'"
      },
      "show": [
        {
          "type": "property",
          "name": "serviceFilePath"
        }
      ]
    },
    {
      "name": "ServiceAuthenticationTypeJSON",
      "condition": {
        "expression": "serviceAccountType == 'JSON'"
      },
      "show": [
        {
          "type": "property",
          "name": "serviceAccountJSON"
        }
      ]
    }
  ],
  "outputs": []
}
